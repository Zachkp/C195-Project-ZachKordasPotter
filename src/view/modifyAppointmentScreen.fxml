      <Label layoutX="15.0" layoutY="209.0" text="Start Date" />
      <Label layoutX="181.0" layoutY="209.0" text="End Date" />
      <ComboBox fx:id="contactBox" layoutX="15.0" layoutY="136.0" prefWidth="150.0" promptText="Contact" />
      <TextField fx:id="startTimeField" layoutX="15.0" layoutY="260.0" promptText="Start Time" />
      <TextField fx:id="endTimeField" layoutX="180.0" layoutY="260.0" promptText="End Time" />
   </children>
</AnchorPane>
