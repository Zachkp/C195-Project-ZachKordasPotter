      <TextField fx:id="titleField" layoutX="15.0" layoutY="65.0" promptText="Title" />
      <TextArea fx:id="description" layoutX="181.0" layoutY="65.0" prefHeight="130.0" prefWidth="401.0" promptText="Description of Appointment" />
      <TextField fx:id="aptLocationField" layoutX="15.0" layoutY="100.0" promptText="Location" />
      <TextField fx:id="typeField" layoutX="15.0" layoutY="170.0" promptText="Type" />
      <TextField fx:id="aptIdField" disable="true" layoutX="15.0" layoutY="315.0" prefHeight="25.0" prefWidth="149.0" promptText="Appointment ID" />
      <TextField fx:id="customerIdField" layoutX="180.0" layoutY="315.0" promptText="Customer ID" />
      <TextField fx:id="userIdField" layoutX="344.0" layoutY="315.0" promptText="User ID" />
